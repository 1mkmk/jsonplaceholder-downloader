# -------- Server configuration --------
server.port={{ app_port }}

# -------- Application settings --------
app.output.directory={{ output_dir }}
app.api.base-url=https://jsonplaceholder.typicode.com
{% if api_timeout is defined %}
app.api.timeout={{ api_timeout }}
{% endif %}

# -------- Logging configuration --------
logging.file.name={{ app_log_dir }}/application.log
logging.level.root=WARN
logging.level.net.maciejkasik=INFO
logging.level.org.springframework=WARN

# -------- Additional custom settings --------
{% if additional_app_props is defined %}
{% for key, value in additional_app_props.items() %}
{{ key }}={{ value }}
{% endfor %}
{% endif %}